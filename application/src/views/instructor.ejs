<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<link
  href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
  rel="stylesheet"
  id="bootstrap-css"
/>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>

<div id="instructor">
  <h3 class="text-center text-white pt-5">InstructorForm form</h3>
  <div class="container">
    <div
      id="instructorForm-row"
      class="row justify-content-center align-items-center"
    >
      <div id="instructorForm-column" class="col-md-6">
        <div id="instructorForm-box" class="col-md-12">
          <form id="instructorForm" class="form" action="/instructor" method="POST">
            <h3 class="text-center text-info">Instructor Form</h3>
            <div class="form-group">
              <label for="firstName" class="text-info"
                >Instructor Full Name:</label
              ><br />
              <input
                type="text"
                name="name"
                id="firstName"
                class="form-control"
                required>
            </div>
            <div class="form-group">
              <label for="email" class="text-info"
                >Instructor Email:</label
              ><br />
              <input
                type="text"
                name="email"
                id="email"
                class="form-control"
                required>
            </div>
            <div class="form-group">
              <label for="className" class="text-info">Class Name:</label><br />
              <input
                type="text"
                name="className"
                id="className"
                class="form-control"
                required>
            </div>
            <div class="form-group">
              <label for="selectDay" class="text-info">Select the Semester:</label
              ><br />
              <select name="year" class="right"  required>
                <option value="Spring selected">Spring</option>
                <option value="Summer">Summer</option>
                <option value="Fall">Fall</option>

              </select>
            </div>
            <div class="form-group">
              <label for="selectDay" class="text-info">Select the year:</label
              ><br />
              <select name="year" class="right"  required>
                <option value="2021 selected">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
                <option value="2024" >2024</option>
                <option value="2025">2025</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="selectDay" class="text-info">Select the day:</label
              ><br />
              <select name="weekday" class="right" multiple required>
                <option value="Monday" selected>Monday</option>
                <option value="Tuesday">Tuesday</option>
                <option value="Wednesday">Wednesday</option>
                <option value="Thursday">Thursday</option>
                <option value="Friday" >Friday</option>
                <option value="Saturday">Saturday</option>
                <option value="Sunday">Sunday</option>
              </select>
            </div>
            <div class="form-group">
              <label for="classTime" class="text-info">Class Start Time:</label
              ><br />
              <input
                type="time"
                name="startTime"
                id="startTime"
                class="form-control"
                required>
            </div>
            <div class="form-group">
              <label for="classTime" class="text-info">Class End Time:</label
              ><br />
              <input
                type="time"
                name="endTime"
                id="endTime"
                class="form-control"
                required>
            </div>
            <div class="form-group">
              <label for="password" class="text-info">Class password:</label><br />
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
                required>
            </div>
            <div class="form-group">
              <input
                type="submit"
                name="submit"
                class="btn btn-info btn-md"
                value="Generate Link"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
