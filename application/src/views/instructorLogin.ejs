<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css"/>

<div id="instructor">
  <h3 class="text-center text-white pt-5">Welcome Instructor!</h3>
  <div class="container">
    <div id="instructorForm-row" class="row justify-content-center align-items-center">
      <div id="instructorForm-column" class="col-md-6">
        <div id="instructorForm-box" class="col-md-12">
<!--         was /action home-->
          <form id="instructorForm" class="form" action="/instructorLogin" method="POST">
            <h3 class="text-center text-info">Login to your Instructor Account</h3>
<!--            <div class="form-group">-->
<!--              <label for="firstName" class="text-info"-->
<!--                >Instructor Full Name:</label-->
<!--              ><br />-->
<!--              <input-->
<!--                type="text"-->
<!--                name="name"-->
<!--                id="firstName"-->
<!--                class="form-control"-->
<!--                required>-->
<!--            </div>-->
            <div class="form-group">
              <label for="email" class="text-info">Instructor Email:</label>
              <br />
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                required>
            </div>

            <div class="form-group">
              <label for="password" class="text-info">Instructor Password:</label><br />
              <input
                      pattern=".{6,18}"
                      title="Should be between 6 and 18 characters!"
                      type="password"
                      name="password"
                      id="password"
                      class="form-control"
                      required>
            </div>
            <div>
              <% if (typeof message !== 'undefined' && message.length > 0) { %>
                <p class="alert alert-primary" alerts="alert">
                  <%= message %>
                </p>
              <% } else if (typeof message === 'undefined' || message.length === 0) { %>

            <% } %>
            </div>
            <div class="form-group">
              <input
                      type="submit"
                      name="submit"
                      class="btn btn-info btn-md"
                      value="Login to Instructor Account"
              />
            </div>
            <div>
              If you don't yet have an account. <a href="/instructorRegister">Create a new account here.</a>
            </div>
            <div>
              Forgot password? <a href="/forget-password">Reset a new password here.</a>
            </div>
              <div id="class-lookup-link" class="text-left">
                  <a href="/getClassLink" class="text-info">Look up your class link here</a>
              </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
