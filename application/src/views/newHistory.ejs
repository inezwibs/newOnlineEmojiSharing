    <script type="text/javascript" src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script>
        function update_chart_visibility(chk_bx) {
            const params = new URLSearchParams(document.location.search);
            const classLinkId = params.get("classLinkId");
            const myurl = "/history?classLinkId=" + classLinkId;
            var isChecked = 0;
            if (chk_bx.checked) {
                isChecked = 1;
            }
            $.ajax({
                type: "POST",
                url: myurl,
                data: {
                    "history_chart_access": isChecked,
                },
                success: function (data) {
                    if (data.status == "success") {
                        alert("successfully authenticated!")
                    } else if (data.status == "failed") {
                        alert("failed authentication!")
                    }
                }
            });
        }
    </script>
    <script>
        function update_text_visibility(chk_bx) {
            const params = new URLSearchParams(document.location.search);
            const classLinkId = params.get("classLinkId");
            const myurl = "/history?classLinkId=" + classLinkId;
            var isChecked = 0;
            if (chk_bx.checked) {
                isChecked = 1;
            }
            $.ajax({
                type: "POST",
                url: myurl,
                data: {
                    "history_text_access": isChecked,
                },
                success: function (data) {
                    if (data.status == "success") {
                        alert("successfully authenticated!")
                    } else if (data.status == "failed") {
                        alert("failed authentication!")
                    }
                }
            });
        }

    </script>
</head>

    <body>

    <form class="form-group mt-1 ml-1">
        <input type="hidden" name="classLinkId" value="<%=classLinkId%>" />
        <input type="hidden" name="classId" value="<%=classId%>" />
        <input type="hidden" name="userid" value="<%=userid%>" />
        <input type="hidden" name="isAnonymousStatus" value="<%=isAnonymousStatus%>" />
        <input type="hidden" name="emojiSelected" value="<%=emojiSelected%>" />
    </form>

        <div class="container">
            <div class="row table-center">
                <br><br><br><br>
                <p id="EmojiHistory"></p>

                <div class="col-md-10 col-sm-10 middle">

                    <% if (isInstructor === true && history_chart_access === 0) { %>

                        <div>
                            <label class="switch">

                                <input type="checkbox" name="chart_isVisible" onchange="update_chart_visibility(this);" unchecked>
                                <span class="slider round"></span>
                            </label>
                            <label class="switchLabel">
                                visible
                            </label>
                        </div>



                    <% } else if (isInstructor === true && history_chart_access === 1) { %>

                        <div>
                            <label class="switch">

                                <input type="checkbox" name="chart_isVisible" onchange="update_chart_visibility(this);" checked>
                                <span class="slider round"></span>
                            </label>
                            <label class="switchLabel">
                                visible
                            </label>
                        </div>
                    <% } %>
                    <% if (isInstructor === true || (isInstructor === false && history_chart_access === 1)) { %>
                        <div id="chartContainer" style="height: 300px; width: 100%;"></div>
                    <% } %>
        <!--link to other charts -->
                        <div >
                            <ul class="chart-history">
                                <% for (var i = emojiDatesArray.length-1 ; i > -1 ; i--){ %>
                                    <li><a href=<%= path %>/<%=classLinkId%>/<%=classId%>/<%= (emojiDatesArray[i].split('/')).join('-') %>?userId=<%=userid%> target="_blank" >View history for <%= emojiDatesArray[i] %> </a>
                                    </li>
                                <% }%>
                            </ul>
                        </div>

                </div>

                <div class="col-md-10 col-sm-10 middle">
                    <br><br>
                    <% if (isInstructor === true && history_text_access === 0) { %>

                        <div>
                            <label class="switch">

                                <input type="checkbox" name="text_isVisible" onchange="update_text_visibility(this);" unchecked>
                                <span class="slider round"></span>
                            </label>
                            <label class="switchLabel">
                                visible
                            </label>
                        </div>



                    <% } else if (isInstructor === true && history_text_access === 1) { %>

                        <div>
                            <label class="switch">

                                <input type="checkbox" name="text_isVisible" onchange="update_text_visibility(this);" checked>
                                <span class="slider round"></span>
                            </label>
                            <label class="switchLabel">
                                visible
                            </label>
                        </div>
                    <% } %>
                    <span id="result"></span>
                    <%if ((isInstructor === true || (isInstructor === false && history_text_access === 1))) { %>
                        <div>
                            <div class="row">
                                <div class="ex1">
                                        <table style="width: 100%">
                                            <tr>
                                                <th>Time</th>
                                                <th>Name</th>
                                                <th>Text</th>
                                            </tr>
                                            <% for(var i=0; i < userInfo.length; i++) { %>

                                            <tr>
                                               <td><h6><%=(new Date(Date.parse(userInfo[i].date_time))).toLocaleString('en-US',{ timeZone: 'America/Los_Angeles', hour:'2-digit',minute:'2-digit'}) %></h6></td>
                                                <td><h6>
                                                        <%if (userInfo[i].isAnonymous === 0) { %>
                                                            <%= userInfo[i].full_name %>
                                                        <% }else{ %>
                                                                Anonymous user
                                                        <% } %>
                                                    </h6>
                                                </td>
                                                <td><h6><%= userInfo[i].text %></h6></td>
                                            </tr>
                                            <% } %>

                                        </table>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

    </body>
