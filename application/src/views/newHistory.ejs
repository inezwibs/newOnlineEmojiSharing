            "<% for(var i=0; i < topChartRecords.length; i++) { %>"
            dps1.push({ y: parseInt("<%= topChartRecords[parseInt(i)].count_online_notParticipated %>"), label: "<%=(new Date(Date.parse(topChartRecords[parseInt(i)].date_time))).toLocaleTimeString('en-US',{ timeZone: 'America/Los_Angeles', hour:'2-digit',minute:'2-digit'}) %>" });
