            " <% } %>"

            var chart = new CanvasJS.Chart("chartContainer",
                {
                    colorSet: "myShades",
                    title: {
                        text: "Emojis count per minute for <%=topDate%>, class <%=classInfo.class_name%>, on <%=classInfo.datetime%>"
