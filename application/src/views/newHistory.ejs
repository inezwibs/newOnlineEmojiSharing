            var dps2 = [];
            "<% for(var i=0; i < topChartRecords.length; i++) { %>"
            dps2.push({ y: parseInt("<%= topChartRecords[parseInt(i)].count_emoji5 %>"), label: "<%=(new Date(Date.parse(topChartRecords[parseInt(i)].date_time))).toLocaleTimeString('en-US',{ timeZone: 'America/Los_Angeles', hour:'2-digit',minute:'2-digit'}) %>" });
            " <% } %>"
